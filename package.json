{
  "name": "rebl-wallet",
  "version": "0.0.3",
  "description": "An Ethereum wallet for Rebellious token",
  "author": "Rebellious <info@rebellious.io>",
  "main": "src/main.js",
  "scripts": {
    "start": "electron-forge start",
    "pack": "electron-builder --dir",
    "dist-mac": "electron-builder -m",
    "dist-win": "electron-builder -w",
    "dist-linux": "electron-builder -l",
    "dist-all": "electron-builder -lw",
    "dev": "ELECTRON_ENABLE_LOGGING=1 electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "postinstall": "electron-builder install-app-deps"
  },
  "compression": "maximum",
  "build": {
    "appId": "com.reblwallet",
    "productName": "Rebellious Wallet",
    "directories": {
      "buildResources": "src/build"
    },
    "mac": {
      "category": "your.app.category.type",
      "icon": "src/build/icon.icns"
    },
    "linux": {
      "target": [
        "deb",
        "rpm"
      ],
      "icon": "src/build/icons/512x512.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "src/build/icon.ico"
    }
  },
  "repository": "https://github.com/electron/electron-quick-start",
  "keywords": [
    "rebl",
    "rebellious",
    "rebl-wallet"
  ],
  "license": "MIT",
  "devDependencies": {
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "electron-builder": "^19.55.3",
    "electron-forge": "^4.2.0",
    "electron-prebuilt-compile": "1.7.8"
  },
  "dependencies": {
    "@ledgerhq/common": "^2.1.3",
    "@ledgerhq/hw-app-eth": "^2.1.3",
    "@ledgerhq/hw-transport": "^2.2.0",
    "@ledgerhq/hw-transport-node-hid": "^2.1.3",
    "@ledgerhq/hw-transport-u2f": "^2.1.3",
    "bluebird": "^3.5.1",
    "bootstrap": "^4.0.0",
    "bs58check": "^2.1.1",
    "electron-compile": "^6.4.2",
    "electron-log": "^2.2.14",
    "electron-squirrel-startup": "^1.0.0",
    "eth-lib": "^0.2.7",
    "ethereumjs-tx": "^1.3.3",
    "ethereumjs-util": "^5.1.3",
    "hdkey": "^0.7.1",
    "ledgerco": "^1.2.1",
    "lodash": "^4.17.4",
    "popper.js": "^1.12.9",
    "toastr": "^2.1.4",
    "web3": "^1.0.0-beta.28",
    "web3-core-promievent": "^1.0.0-beta.29"
  },
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "icon": "src/build/icon.ico"
      },
      "electronWinstallerConfig": {
        "name": "rebl",
        "iconUrl": "https://rebellious.io/favicon.ico",
        "setupIcon": "src/build/icon.ico",
        "noMsi": true
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "",
        "name": ""
      },
      "windowsStoreConfig": {
        "name": "rebl"
      }
    }
  }
}
